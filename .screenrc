startup_message off
vbell off

# 文字コード
defutf8 on↲
defkanji utf-8↲
encoding utf-8 utf-8↲
defencoding utf-8↲

# マウススクロール
scrollback 10000↲
defscrollback 10000↲
termcapinfo xterm* ti@:te@↲
altscreen on↲↲
↲
caption always '%?%F%{= gW}%:%{= Kk}%?%2n%f%07=%t%='↲
hardstatus alwayslastline '[%m/%d %02c:%s] %{= .g}%H%{-} %L=%-w%45L>%{= g.}%n %t%{-}%+w %-17<%=%{= .y} LoadAVG[%l]'↲
↲
windowlist title  '%{u .g}Num Flags Title%='↲
windowlist string '%{.g}%3n %{.y}%f%09=%{-} %t %='↲
↲
bind s  # 無効:入力を受け付けない
bind x  # 無効:ロック

escape ^Tt
